@{
    var sessao = Convert.ToString(Session["Tipo"]);
    if (sessao == "Aluno" || sessao == "Professor")
    {
        Response.Write("<script>location.href='http://localhost:51948/NotasAlunosPortal';</script>");
    }
}

@model PortalNotasFaculdades.Models.DisciplinasCursos

@{
    ViewBag.Title = "Disciplinas";
}


<div class="topRefs">
    <a href="~/Home">
        <span class="sp1"><strong><i class="fa fa-home fa-2x"></i></strong></span>
    </a>
    <a href="~/DisciplinasCursos">
        <span class="txt sp3"><strong>Disciplinas dos Cursos</strong></span>
    </a>
    <a href="#">
        <span class="txt sp4"><strong>Deletar</strong></span>
    </a>
</div>
<hr />

<h2 style="text-align: center;"><strong>Disciplinas dos Cursos</strong></h2>
<hr />

<h3 style="color: #f00;"><strong>Tem certeza que quer deletar esse registro?</strong></h3>
<div>
    <h4 style="color: darkorange;"><strong>Deletar - @Model.NomeDisciplina</strong></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cursos.SemestresQuant)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cursos.SemestresQuant)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomeDisciplina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeDisciplina)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SemestreDisciplina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SemestreDisciplina)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HorasAulasDadas)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HorasAulasDadas)
        </dd>

        @Html.HiddenFor(model => model.FaculdadeId)
        @Html.HiddenFor(model => model.EmailFaculdade)

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sim, Deletar" class="btn btn-danger" /> |
            @Html.ActionLink("Não, Voltar á Lista", "Index", new { }, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('a').removeClass("active");
        $("#disc").addClass("active");
    });
</script>
