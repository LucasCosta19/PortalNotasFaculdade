@{
    if (Session["AdminId"] == null) {
        Response.Write("<script>location.href='http://localhost:51948/AdminPortal/UsuariosAdmin/Login';</script>");
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/styleResp.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <script src="~/Scripts/NotasCalc.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Scripts/MyDataTables.js"></script>
    @RenderSection("styles", false)
    <style>
        .btn-primary {
            background: #290431 !important;
            box-shadow: 5px 5px 15px #000 !important;
            border: none !important;
            padding-bottom: 10px;
            padding-top: 10px;
        }

        .btn-primary:hover {
            box-shadow: 5px 5px #ccc !important;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        @Html.ActionLink("Portal Admin", "Index", "Home", new { area = "AdminPortal" }, new { @class = "navbar-brand active", id = "home" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Admins", "Index", "UsuariosAdmin", new { area = "AdminPortal" }, new { @class = "navbar-brand", id = "adm" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Faculdades", "Index", "Faculdades", new { area = "AdminPortal" }, new { @class = "navbar-brand", id = "inst" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Usuários Faculdades", "Index", "UsuariosFaculdades", new { area = "AdminPortal" }, new { @class = "navbar-brand", id = "users" })
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("LogOut", "UsuariosAdmin")" class="nav-link">Sair</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="~/AdminPortal/Faculdades/_BuscaFaculdade" method="get">
                <input class="form-control mr-sm-2" type="search" name="nome" placeholder="Buscar Faculdade..." value="@{if (TempData["busca"] != null) {@TempData["busca"]; } }" aria-label="Search" required>
                <button class="btn btn-success my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    @RenderSection("ScriptPage", false)

    <style>
        .table-striped > tbody > tr:nth-child(2n+1) > td,
        .table-striped > tbody > tr:nth-child(2n+1) > th {
            background-color: #f4f4f4;
            color: #000;
        }
    </style>
</body>
</html>