@model PortalNotasFaculdades.Areas.AdminPortal.Models.UsuariosAdmin

@{
    ViewBag.Title = "Admins";
}

<br />
<div class="container">
    <h2 style="text-align: center;"><strong>Admins</strong></h2>
    <hr />

    <h3 style="color: #f00; text-align: center;"><strong>Quer Mesmo Deletar esse Registro?</strong></h3>
    <div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Nome)
                </td>
            </tr>              

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Senha)
                </th>
                <td>
                    ********
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DataCadastro)
                </th>
                <td>
                    @Html.DisplayFor(model => model.DataCadastro)
                </td>
            </tr>           
        </table>
    </div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sim, Deletar" class="btn btn-danger" /> |
            @Html.ActionLink("Não, Voltar á Lista", "Index", new { }, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('a').removeClass("active");
        $("#adm").addClass("active");

    });
</script>