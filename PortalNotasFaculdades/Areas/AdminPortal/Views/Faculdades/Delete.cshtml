@model PortalNotasFaculdades.Areas.AdminPortal.Models.Faculdades

@{
    ViewBag.Title = "Deletar Faculdade";
}

<br />
<div class="container">
    <h2 style="text-align: center;"><strong>Faculdades</strong></h2>
    <hr />

    <h3 style="color: #f00; text-align: center;"><strong>Quer Mesmo Deletar esse Registro?</strong></h3>
    <div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Nome)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoPessoa)
                </th>
                <td>
                    @Html.DisplayFor(model => model.TipoPessoa)
                </td>
            </tr>

            <tr>
                <th>
                    @{
                        if (Model.Cpf != null && Model.Cpf != "")
                        {
                            @Html.DisplayNameFor(model => model.Cpf)
                        }
                        else
                        {
                            @Html.DisplayNameFor(model => model.Cnpj)
                        }
                    }
                </th>
                <td>
                    @{
                        if (Model.Cpf != null && Model.Cpf != "")
                        {
                            @Html.DisplayFor(model => model.Cpf)
                        }
                        else
                        {
                            @Html.DisplayFor(model => model.Cnpj)
                        }
                    }
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Telefone)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cep)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Cep)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Estado)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Cidade)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Endereco)
                </td>
            </tr>
        </table>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sim, Deletar" class="btn btn-danger" /> |
            @Html.ActionLink("Não, Voltar á Lista", "Index", new { }, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('a').removeClass("active");
        $("#inst").addClass("active");

    });
</script>