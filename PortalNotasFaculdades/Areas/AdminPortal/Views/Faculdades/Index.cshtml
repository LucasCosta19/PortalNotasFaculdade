@model IEnumerable<PortalNotasFaculdades.Areas.AdminPortal.Models.Faculdades>

@{
    ViewBag.Title = "Faculdades";
}

<br />
<div class="container">
    <h2 style="text-align: center;"><strong>Faculdades</strong></h2>
    <hr />
    @{
        if (TempData["buscaErr"] != null)
        {
            <p class="alert alert-danger" style="min-width: 100%!important;">@TempData["buscaErr"] </p>
        }
        if (TempData["MessageErr"] != null)
        {
            <p class="alert alert-danger" style="min-width: 100%!important;">@TempData["MessageErr"] </p>
        }
        if (TempData["Message"] != null)
        {
            <p class="alert alert-success" style="min-width: 100%!important;">@TempData["Message"] </p>
        }
    }
    <p>
        @Html.ActionLink("Nova Faculdade", "Create", new { }, new { @class = "btn btn-primary", @title = "Nova Faculdade" })
    </p>
    <div class="table-responsive" id="tbData">
        <table class="table table-striped table-bordered table-light" id="table" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoPessoa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoPessoa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.FaculdadeId }, new { @class = "btn btn-secondary", @title = "Editar Dados do Usuário" })
                            @Html.ActionLink("Detalhes", "Details", new { id = item.FaculdadeId }, new { @class = "btn btn-info", @title = "Detalhes do Usuário" })
                            @Html.ActionLink("Deletar", "Delete", new { id = item.FaculdadeId }, new { @class = "btn btn-danger", @title = "Deletar Usuário Cadastrado" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @section styles{
        <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
    }
    @section ScriptPage	{
        <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap4.js")"></script>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('a').removeClass("active");
        $("#inst").addClass("active");
    });
</script>